<!DOCTYPE html>
<html>
<head>
    <title>Recipe Book</title>
</head>
<body>
    <h1>Recipe Book</h1>
    <a href="/new">Add New Recipe</a>
    <% recipes.forEach((recipe, index) => { %>
        <h2><%= recipe.title %></h2>
        <p><%= recipe.ingredients %></p>
        <p><%= recipe.instructions %></p>
    <% }) %>
</body>
</html>